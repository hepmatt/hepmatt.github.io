            <h3>Generated SQL Command:</h3>
            <code id="sqlCode"></code>
        </div>
    </div>

    <script>
        document.getElementById('personnelForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Get form values
            const formData = {
                dodid: document.getElementById('dodid').value,
                lastName: document.getElementById('lastName').value,
                firstName: document.getElementById('firstName').value,
                middleInitial: document.getElementById('middleInitial').value || 'NULL',
                rank: document.getElementById('rank').value,
                dutyTitle: document.getElementById('dutyTitle').value || 'NULL',
                cellPhone: document.getElementById('cellPhone').value || 'NULL',
                email: document.getElementById('email').value || 'NULL',
                etsDate: document.getElementById('etsDate').value || 'NULL'
            };

            // Generate SQL command
            const sql = `INSERT INTO Personnel (dodid, last_name, first_name, middle_initial, rank, duty_title, cell_phone, email, ETS) VALUES (
    ${formData.dodid},
    '${formData.lastName}',
    '${formData.firstName}',
    ${formData.middleInitial === 'NULL' ? 'NULL' : `'${formData.middleInitial}'`},
    '${formData.rank}',
    ${formData.dutyTitle === 'NULL' ? 'NULL' : `'${formData.dutyTitle}'`},
    ${formData.cellPhone === 'NULL' ? 'NULL' : `'${formData.cellPhone}'`},
    ${formData.email === 'NULL' ? 'NULL' : `'${formData.email}'`},
    ${formData.etsDate === 'NULL' ? 'NULL' : `'${formData.etsDate}'`}
);`;

            // Display SQL
            document.getElementById('sqlCode').textContent = sql;
            document.getElementById('sqlPreview').classList.add('show');

            // Show success message
            document.getElementById('successMessage').classList.add('show');
            
            // Hide success message after 3 seconds
            setTimeout(() => {
                document.getElementById('successMessage').classList.remove('show');
            }, 3000);

            // Clear form after submission
            setTimeout(() => {
                clearForm();
            }, 3500);
        });

        function clearForm() {
            document.getElementById('personnelForm').reset();
            document.getElementById('sqlPreview').classList.remove('show');
            document.getElementById('successMessage').classList.remove('show');
        }

        // Auto-uppercase middle initial
        document.getElementById('middleInitial').addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase();
        });

        // Format phone number as user types
        document.getElementById('cellPhone').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 6) {
                value = value.slice(0, 3) + '-' + value.slice(3, 6) + '-' + value.slice(6, 10);
            } else if (value.length >= 3) {
                value = value.slice(0, 3) + '-' + value.slice(3);
            }
            e.target.value = value;
        });
    </script>
